
<div class= "container d-flex flex-column align-items-center mt-5">

<h2>Account Login</h2>
<form action='/' method= "POST" style= "width:50%">
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" id="email" name = "email" value="{{account}}" required>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name = "password" id="password" value="{{password}}" required>
  </div>
  {{#if password}}
  <p style="color: red;"> Wrong User Name or Password! </p>
  {{/if}}
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


</div>


